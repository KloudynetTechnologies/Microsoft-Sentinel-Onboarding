    "principalIdDisplayName": "SOC Analyst I"
   },
   {
    "principalId": "36cf8309-2e96-4ebd-b913-583575b223de",
    "roleDefinitionId": "3e150937-b8fe-4cfb-8069-0eaf05ecd056",
    "principalIdDisplayName": "SOC Analyst III"
   },
   {
